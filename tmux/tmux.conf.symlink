set -g default-terminal "screen-256color"

# Enable mouse selections
set -g mouse on

# Set scrollback hostory limit to 10k
set -g history-limit 10000

# Remap prefix to Control + a
unbind C-b
set -g prefix C-a
bind a send-prefix

# Force a reload of the config file
unbind r
bind r source-file ~/.tmux.conf

# Windows
setw -g window-status-current-fg white
setw -g window-status-current-attr bright

# Panes
set -g pane-border-fg colour240
set -g pane-border-bg colour235
set -g pane-active-border-fg colour220
set -g pane-active-border-bg colour235

# Easier splits with current path
bind | split-window -h -c '#{pane_current_path}'
bind - split-window -v -c '#{pane_current_path}'

# Status Bar
set -g status-position bottom
set -g status-bg colour234
set -g status-fg colour248
set -g status-left ''

# Right status bar
set -g status-right '#{prefix_highlight} %a %Y-%m-%d %H:%M'
set -g @prefix_highlight_fg colour232
set -g @prefix_highlight_bg colour220

# Stop autorename windows
set-option -g allow-rename off

# Start windows and panes at 1, not 0
set -g base-index 1
setw -g pane-base-index 1

# Current window status bar style
setw -g window-status-current-bg colour237
setw -g window-status-current-format ' #I#[fg=colour254] - #{net_speed}#[fg=colour255]#W#[fg=colour220]#F '
setw -g window-status-current-attr bold

# -----------------------------------------------
# OSX only
# -----------------------------------------------

set-option -g default-command "which reattach-to-user-namespace > /dev/null && reattach-to-user-namespace -l $SHELL || $SHELL"

# Use vim keybindings in copy mode
setw -g mode-keys vi

# Setup 'v' to begin selection as in Vim
bind-key -t vi-copy v begin-selection
bind-key -t vi-copy y copy-pipe "reattach-to-user-namespace pbcopy"

# Update default binding of `Enter` to also use copy-pipe
unbind -t vi-copy Enter
bind-key -t vi-copy Enter copy-pipe "reattach-to-user-namespace pbcopy"

# -----------------------------------------------
# Plugins
# -----------------------------------------------
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
set -g @plugin 'tmux-plugins/tmux-copycat'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @plugin 'tmux-plugins/tmux-net-speed'

# Continuum options
set -g @continuum-boot 'on'
set -g @continuum-boot-options 'iterm'

# Inizialize tpm
run '~/.tmux/plugins/tpm/tpm'
