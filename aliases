# General
alias zshconfig="subl ~/.zshrc"
alias ohmyzsh="subl ~/.oh-my-zsh"
alias cl="clear"
alias dot="cd ~/.dotfiles && st"
alias pro="cd ~/projects"
alias st="subl ."
alias publickey="pbcopy < ~/.ssh/id_rsa.pub"
alias l="ls -l"

# Open files
alias f="open -a Finder"
alias ch="open -a google\ chrome"
alias opera="open -a opera"
alias safari="open -a safari"
alias firefox="open -a firefox"

# Git aliases
alias gs="git status"
alias ga="git add -A"
alias gpl="git pull"
alias gps="git push"
alias wip="git add -A && git commit -m 'WIP'"

# Apache and MySQL aliases
alias apache.start="apachectl start"
alias apache.stop="apachectl stop"
alias apache.restart="apachectl stop && apachectl start"
alias mysql.start="mysql.server start"
alias mysql.stop="mysql.server stop"
alias mysql.restart="mysql.server stop && mysql.server start"

# Npm aliases
alias ni="npm install"
alias nis="npm install --save"
alias nid="npm install --save-dev"
alias nig="npm install --global"
alias nr="npm run"
alias ns="npm start"
alias nf="npm cache clean && rm -rf node_modules && npm install"
